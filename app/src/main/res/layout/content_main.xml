<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.connal.planit.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/titleBackgroundImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/titlemapbackground"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email"
        android:onClick="nextButton"/>

    <TextView
        android:id="@+id/titleMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/titleSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleMainText"
        android:text="@string/app_slogan"/>

</RelativeLayout>
